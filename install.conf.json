[
    {
        "clean": [
            "~"
        ]
    },
    {
        "shell": [
            ["mkdir -p ~/bin/ ~/.ssh/ ~/.config/sbackup/ ", "Creating dirs."]
        ]
    },
    {
        "link": {
            "~/.bashrc":"bashrc",
	        "~/.vimrc": "vimrc",
	        "~/.vim": "vim/",
	        "~/.zshrc": "zshrc",
	        "~/.cshrc": "cshrc",
            "~/.gitignore_global": "gitignore_global",
            "~/.dotfiles": ""
        }
    },
    {
        "shell": [
            ["git submodule update --init --recursive", "Installing/updating submodules"]
        ]
    }
]
